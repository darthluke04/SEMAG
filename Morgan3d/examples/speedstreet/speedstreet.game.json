    "y_up":     true,
    "packages":   [],
    "scripts":    ["bike.pyxl", "physics.pyxl"],
    "start_mode": "Title",
    "modes":      ["Title", "Play"],
    "assets":     {
        "bikePart":    "bikePart.sprite.json",
        "wheelSprite": "wheels.sprite.json",
        "logoSprite":  "logo.sprite.json",
        "cityMap":     "city.map.json",
        "titleBackgroundMap": "titleBackground.map.json",
        "font":        "quad://fonts/deja-8.font.json",
        "trickFont":   "quad://fonts/nano-5.font.json",
        "hudFont":     "quad://fonts/good-neighbors-9.font.json",
        "titleSound":  "quad://sounds/loop-space.sound.json"
    },

    "version":      0.5,
    "description":  "How fast can you go? Tear through the road course pulling tricks off jumps and fighting to be the leader of the pack.",
    "min_players":   1,
    "max_players":   4,
    "cooperative":  false,
    "competitive":  true,
    "achievements": false,
    "highscores":   false,

    "constants": {
        "skewY":               {"type": "number",  "value":    -0.5},
        "debugPhysics":        {"type": "boolean", "value":   false},
        "debugZOrder":         {"type": "boolean", "value":   false, "description":  "Enable to draw fog for visualizing z-order. Very slow"},
        "debugTricks":         {"type": "boolean", "value":   false, "description":  "Enable to debugPrint a log of bike[0] trick events"},
        "physicsSteps":        {"type": "number",  "value":       8},
        "gravity":             {"type": "number",  "value":  -0.065},
        "uiZ" :                {"type": "number",  "value":     256, "description":  "Z-order of the corner HUD elements"},
        "bikeTurn":            {"type": "number",  "value":  0.0039},
        "bikeMaxSpeed":        {"type": "number",  "value":       4},
        "bikeZAcceleration":   {"type": "number",  "value":     0.8},
        "bikeAcceleration":    {"type": "number",  "value":    0.08},
        "respawnFrames":       {"type": "number",  "value":      90},
        "roughGroundFriction": {"type": "number",  "value":  "0.4%"},
        "minimumAirFrames":    {"type": "number",  "value":       5},
        "minimumWheelieFrames":{"type": "number",  "value":      15}
    }
}
